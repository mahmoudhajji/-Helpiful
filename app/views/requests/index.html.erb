<div class="container">
  <h1 class="mt-3 mb-3">My list</h1>
  <div class="row">
    <% @requests.each do |request| %>
      <div class="col-sm-6 col-md-4 col-lg-3">
        <div class="card mt-3 mb-3 bg-secondary">
          <% if request.photo.attached? %>
          <%= cl_image_tag request.photo.key, height: 250, crop: :fill %>
          <% else %>
          <%= image_tag "fragezeichen.jpeg", height: 250, crop: :fill %>
          <% end %>
          <div class="card-body d-flex justify-content-center">
            <%= link_to "#{request.name}", request_path(request), class: "card-title text-light" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to "Back to Homepage", root_path, class: "btn btn-light mt-3 mb-3" %>
</div>
