  <header class="p-3 bg-dark text-white">
    <div class="container">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
          <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
        </a>

        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          <li><%= link_to 'Home', root_path, class: 'nav-link px-2 text-white'%></li>
          <li><%= link_to 'Home', root_path, class: 'nav-link px-2 text-white'%></li>
          <li><a href="#" class="nav-link px-2 text-white">About us</a></li>
        </ul>

        <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
          <input type="search" class="form-control form-control-dark" placeholder="Search..." aria-label="Search">
        </form>

        <div class="text-end">
          <%= link_to 'Log in', new_user_session_path, class: 'btn btn-outline-light me-2'%>
          <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-warning'%>
        </div>
      </div>
    </div>
  </header>
  
  <div id="banner">
    <h1>Here are all the requests</h1>
    <h3>Take a look at them and choose a task</h3>
    <p>
    <span data-controller="typed-js"></span>
  </p>
  </div>
  
  <div class="container">
    <div class="row">
      <% @requests.each do |request| %>
        <div class="col-sm-6 col-md-4 col-lg-3">
          <div class="card mt-3 mb-3 bg-secondary">
            <% if request.photo.attached? %>
            <%= image_tag request.photo.key, height: 250, crop: :fill %>
            <% else %>
            <%= image_tag "HELPIFUL.png", height: 250, crop: :fill %>
            <% end %>
            <div class="card-body d-flex justify-content-center">
              <%= link_to "#{request.name}", request_path(request), class: "card-title text-light" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  
    <%= link_to "Back to Homepage", root_path, class: "btn btn-light mt-3 mb-3" %>
  </div>
  
