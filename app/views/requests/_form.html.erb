<div class="form">
    <%= simple_form_for(@request) do |f| %>
        <div class="form-inputs">
          <%= f.input :title %>
          <%= f.input :description %>
          <%= f.input :address %>
          <%= f.input :price %>
          <%= f.input :category %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, class: "btn btn-primary" %>
        </div>
    <% end %>
</div>
