  <header class="p-3 bg-dark text-white">
    <div class="container">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
          <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
        </a>

        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          <li><a href="#" class="nav-link px-2 text-secondary">Home</a></li>
          <li><a href="#" class="nav-link px-2 text-white">Features</a></li>
          <li><a href="#" class="nav-link px-2 text-white">Pricing</a></li>
          <li><a href="#" class="nav-link px-2 text-white">FAQs</a></li>
          <li><a href="#" class="nav-link px-2 text-white">About</a></li>
        </ul>

        <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
          <input type="search" class="form-control form-control-dark" placeholder="Search..." aria-label="Search">
        </form>

        <div class="text-end">
          <%= link_to 'Log in', new_user_session_path, class: 'btn btn-outline-light me-2'%>
          <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-warning'%>
        </div>
      </div>
    </div>
  </header>

<div class="banner">
  <div class="search-bar">
    <%= simple_form_for :search, url: requests_path, method: "GET", html: { class: 'form-inline' } do |f| %>
      <%= f.input :category, input_html: {value: ""}, priority: [ "Category" ], collection: [ Request::CATEGORIES ]%><%= f.input :city, input_html: {value: ""}, priority: [ "city" ], collection: [ Request::CITIES ]%><%= f.submit "Search", class: "btn-sign" %>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="cards-category-container" data-controller="category" >
    <% Request::CATEGORIES.each do |category| %>
      <div class="card-trip"  data-action="click->category#index">
        <%= image_tag("pexels-anna-tarazevich-5697250.jpg") %>
        <div class="card-trip-infos">
          <div>
            <h2 data-category-target="category"><%= category %></h2>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
